# PY-Framework Configuration Template
# Copy this file to .env and fill in your values

# Core settings
SECRET_KEY=your-secret-key-32-chars-minimum-change-this-value
DEBUG=True
DATABASE_URL=app.db

# Development & Production Commands
# Development: uv run dev.py (with hot reload, debug mode)
# Production: uv run app.py (optimized, security headers)

# Email settings (optional - for user verification emails)
# For Gmail, you MUST use an app-specific password:
# 1. Go to Google Account → Security → 2-Step Verification
# 2. Click "App passwords" and generate a 16-character password
# 3. Use that password below (not your regular Gmail password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
FROM_EMAIL=your-email@gmail.com

# OAuth settings (optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Security settings (optional - defaults shown)
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
SESSION_EXPIRE_HOURS=24
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1
